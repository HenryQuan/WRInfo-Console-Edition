<Window x:Class="WoWs_Real.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoWs_Real"
        mc:Ignorable="d"
        MinHeight="550" MinWidth="810"
        Title="WoWs Real" Height="550" Width="810" WindowStartupLocation="CenterScreen" Icon="WoWs_Real.ico">
    <Border Padding="10">
        <StackPanel>
            <StackPanel>
                <!-- Future UI -->
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <!-- Link to useful websites and some buttons -->
                <Grid Margin="0 3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Useful Link -->
                    <TextBlock Grid.Column="1" FontWeight="Bold" FontSize="20" Margin="0 5" TextAlignment="Center" Text="Useful Links"></TextBlock>
                    <!-- Settings -->
                    <Button Click="SetupBtn_OnClick" x:Name="SetupBtn" Margin="5 5 5 5" Grid.Column="0" Content="Setup"></Button>
                    <!-- Start Game -->
                    <Button Click="StartBtn_OnClick" x:Name="StartBtn" Margin="5 5 5 5" Grid.Column="2" Content="Start"></Button>
                </Grid>
                
                <!-- Some useful links -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Button that goes to several websites -->
                    <Button Click="WoWsInfoBtn_OnClick" x:Name="WoWsInfoBtn" FontSize="14" Margin="0 0 10 0" Grid.Column="0" Content="WoWs Info"></Button>
                    <Button Click="OfficialBtn_OnClick" x:Name="OfficialBtn" FontSize="14" Margin="0 0 10 0" Grid.Column="1" Content="WoWs Offical"></Button>
                    <Button Click="WikiBtn_OnClick" x:Name="WikiBtn" FontSize="14" Margin="0 0 10 0" Grid.Column="2" Content="Wiki"></Button>
                    <Button Click="NumberBtn_OnClick" x:Name="NumberBtn" FontSize="14" Margin="0 0 10 0" Grid.Column="3" Content="WoWs Number"></Button>
                    <Button Click="SEABtn_OnClick" x:Name="SEABtn" FontSize="14" Margin="0 0 10 0" Grid.Column="4" Content="SEA Group"></Button>
                    <Button Click="ASLAINBtn_OnClick" x:Name="ASLAINBtn" FontSize="14" Grid.Column="5" Content="ASLAIN Modpack"></Button>
                </Grid>
                
                <!-- How to use -->
                <TextBlock TextAlignment="Center" FontWeight="Bold" FontSize="16" Margin="0 3" Text="How to use"></TextBlock>
                <TextBlock TextAlignment="Center" FontSize="14" Text="Open WoWs Real before WoWs Client is running and then click start to launch game." />
                
                <!-- Two Teams -->
                <TextBlock x:Name="UpdateIndicator" FontSize="26" FontWeight="Bold" Text="REAL TIME STATISTIC" TextAlignment="Center"></TextBlock>
                
                <!-- TEAM 0 and TEAM 1 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="TEAM 0" FontSize="20" FontWeight="Light" TextAlignment="Center"></TextBlock>
                    <TextBlock Grid.Column="1" Text="TEAM 1" FontSize="20" FontWeight="Light" TextAlignment="Center"></TextBlock>
                </Grid>

                <!-- 24 Players -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Team 0 12 Players -->
                    <StackPanel Grid.Column="0" Margin="5 5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <Label x:Name="Player1Label" Grid.Column="0"></Label>
